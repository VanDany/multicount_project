@model IEnumerable<Multicount_WEB.Models.Dto.LocalUserDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Users list</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="LocalUser" asp-action="createLocalUser" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create new user</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="LocalUser" asp-action="UpdateUser" asp-route-CategoryId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="LocalUser" asp-action="DeleteUser" asp-route-CategoryId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>