@model IEnumerable<Multicount_WEB.Models.Dto.TransactionDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Transactions list</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Transaction" asp-action="createTransaction" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create new transaction</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Amount
                </th>
                <th>
                    UserName
                </th>
                <th>
                    Description
                </th>
                <th>
                    CategoryId
                </th>
                <th>
                    Category
                </th>
                <th>
                    CreatedDate
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Amount</td>
                    <td>@item.LocalUser.Name</td>
                    <td>@item.Description</td>
                    <td>@item.CategoryId</td>
                    <td>@item.Category.Name</td>
                    <td>@item.CreatedDate</td>
                    <td>
                        <a asp-controller="Transaction" asp-action="UpdateTransaction" asp-route-transactionId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Transaction" asp-action="DeleteTransaction" asp-route-transactionId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>