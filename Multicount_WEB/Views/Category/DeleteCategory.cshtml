@model Multicount_WEB.Models.VM.CategoryDeleteVM
<form asp-action="DeleteCategory">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete category</h1>
        <hr />
        <input hidden asp-for="Category.Id" />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Category.Name" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Category.Name" disabled class="form-control" />
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexCategory" asp-controller="Category" class="btn btn-primary form-control">Back to list</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
